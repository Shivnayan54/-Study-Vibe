rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Papers collection - Read access for all, write only for authenticated users
    match /papers/{paperId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // PYQS collection - Read access for all, write only for authenticated users
    match /pyqs/{pyqId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Analytics collection - Read/write for all (for visitor tracking)
    // But only admins can read full data
    match /analytics/{document=**} {
      allow read: if request.auth != null; // Only authenticated users (admins) can read
      allow write: if true; // Anyone can write (for visitor tracking)
    }
    
    // Default deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

